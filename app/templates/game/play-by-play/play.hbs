<div class="play-row {{if play.newPeriod 'period-row'}}">
  {{#if play.newPeriod}}
    <div class="period">
      {{play.newPeriod}}
    </div>
  {{else}}
    <div class="time">
      {{#if play.timeLeft}}
        {{seconds-to-time play.timeLeft}}
      {{/if}}
    </div>
    <div class="left-team-container">
      {{#if play.left}}
        <div class="left-team {{if play.score1 'one-point'}} {{if play.score2 'two-points'}} {{if play.score3 'three-points'}}">
          {{partial "game/play-by-play/play-details"}}
        </div>
      {{/if}}
    </div>
    <div class="score">
      {{#if play.scoreAtMoment}}
        {{play.scoreAtMoment}}
      {{/if}}
    </div>
    <div class="right-team-container">
      {{#unless play.left}}
        <div class="right-team {{if play.score1 'one-point'}} {{if play.score2 'two-points'}} {{if play.score3 'three-points'}}">
          {{partial "game/play-by-play/play-details"}}
        </div>
      {{/unless}}
    </div>
  {{/if}}
</div>