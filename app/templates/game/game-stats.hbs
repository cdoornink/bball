<div class="game-stats-header">
  <div class="main-result">
    <div class="result-team-left">
      <div class="team-name">
        <div class="team-organization">
          {{model.homeTeam.organization}}
        </div>
        <div class="team-mascot">
          {{model.homeTeam.mascot}}
        </div>
      </div>
      <div class="team-score">
        {{model.homeScore}}
      </div>
    </div>
    <div class="result-team-right">
      <div class="team-name">
        <div class="team-organization">
          {{model.awayTeam.organization}}
        </div>
        <div class="team-mascot">
          {{model.awayTeam.mascot}}
        </div>
      </div>
      <div class="team-score">
        {{model.awayScore}}
      </div>
    </div>
  </div>

  <div class="results-main-stats">
    <div class="scores team-names">
      <div class="period">
        <div class="period-header"></div>
        <div class="home-score">{{model.homeTeam.mascot}}</div>
        <div class="home-score">{{model.awayTeam.mascot}}</div>
      </div>
    </div>
    {{partial "score-by-quarter"}}
    <div class="scores final-score">
      <div class="period">
        <div class="period-header">F</div>
        <div class="home-score">{{model.homeScore}}</div>
        <div class="home-score">{{model.awayScore}}</div>
      </div>
    </div>
  </div>

  <div class="tab-row">
    {{#link-to "game.index" model}}
      overview
    {{/link-to}}
    {{#link-to "game.box-score" model}}
      box score
    {{/link-to}}
    {{#link-to "game.play-by-play" model}}
      play-by-play
    {{/link-to}}
  </div>
</div>


{{outlet}}