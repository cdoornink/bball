{{#modal-dialog clickOverlay="cancel"}}
  <div class="foul-modal">
    <div class="title">
      Foul - {{controllers.game.selectedPlayer.lastName}}
    </div>

    <div class="option-row">
      <button class="type-button defensive" {{action 'setType' 'defensive'}}>Defensive</button>
      <button class="type-button offensive" {{action 'setType' 'offensive'}}>Offensive</button>
      <button class="type-button loose-ball" {{action 'setType' 'loose ball'}}>Loose Ball</button>
      <button class="type-button technical" {{action 'setType' 'technical'}}>Technical</button>
    </div>

    <div class="confirmation-buttons">
      <div class="cancel">
        <button class="cancel-button" {{action 'cancel'}}>Cancel</button>
      </div>
    </div>

  </div>
{{/modal-dialog}}
