{{#modal-dialog clickOverlay="cancel"}}
  <div class="title">
    {{model.header}}
  </div>
  {{model.message}}
  {{#if model.continue}}
    <div class="confirmation-buttons">
      <div class="cancel">
        <button class="cancel-button" {{action 'cancel'}}>Cancel</button>
      </div>
      <div class="continue">
        <button class="continue-button" {{action 'continue'}}>Continue</button>
      </div>
    </div>
  {{/if}}
{{/modal-dialog}}
