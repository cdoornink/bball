{{#modal-dialog clickOverlay="cancel"}}
  <div class="steal-modal">
    <div class="title">
      Steal - {{controllers.game.selectedPlayer.lastName}}
    </div>

    <div class="confirmation-buttons">
      <div class="cancel">
        <button class="cancel-button" {{action 'cancel'}}>Cancel</button>
      </div>
      <div class="continue">
        <button class="continue-button" {{action 'continue'}}>Submit</button>
      </div>
    </div>
    {{#unless controllers.game.model.ignoredTeam}}
      <div class="option-row">
        <div class="subtitle">
          Turnover
        </div>
        {{#if controllers.game.leftPlayerSelected}}
          {{modal-card-row colors=controllers.game.model.right team=controllers.game.rightOnCourt action="setTurnoverer"}}
        {{else}}
          {{modal-card-row colors=controllers.game.model.left team=controllers.game.leftOnCourt action="setTurnoverer"}}
        {{/if}}
      </div>
    {{/unless}}

  </div>
{{/modal-dialog}}
