<div class="login-page">


<div class="login-logo"></div>

<form class="login-form">
  {{#if login.error}}
    <div class="error-message">
      {{login.error}}
    </div>
  {{/if}}
  <div class="username-field">
    {{input value=login.email placeholder="Username"}}
  </div>
  <div class="password-field">
    {{input value=login.password type="password" placeholder="Password"}}
  </div>
  <button {{action "login"}}>Sign in</button>
  <div class="register-link">
    Not registered? {{#link-to "register"}}Sign up for free.{{/link-to}}
  </div>
</form>

</div>
